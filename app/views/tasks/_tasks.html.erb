<div id="tasks" class="min-w-full divide-y divide-gray-200 space-y-5">
  <% if tasks.any? %>
    <div class="table min-w-full">
      <% tasks.each do |task| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render task %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to edit_task_path(task), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" do %>
              <span class="material-icons">edit</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center my-10">No tasks found.</p>
  <% end %>
</div>
