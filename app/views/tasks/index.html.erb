<% content_for :title, "Tasks" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">To Do</h1>
    <%= link_to "New task", new_task_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <%= turbo_stream_from "tasks" %>
  <%= turbo_frame_tag "tasks", class: "divide-y divide-gray-200 table min-w-full" do %>
    <%= render @tasks %>
  <% end %>
</div>
