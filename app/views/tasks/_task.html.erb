<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5 flex flex-row">
  <%= button_to task, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } do %>
    <%= task.completed? ? content_tag(:span, "check_circle", class: "material-icons") : content_tag(:span, "circle", class: "material-icons") %>
  <% end %>
  <p class="ml-2">
    <%= task.name %>
  </p>
</div>
