
<div id="<%= dom_id task %>" class="w-full sm:w-auto my-5 space-y-5 flex flex-row justify-between items-center pb-5 sm:pb-0">
  <%= button_to task, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 font-medium cursor-pointer text-gray-500", data: { turbo_confirm: "Are you sure?" } do %>
    <%= task.completed? ? content_tag(:span, "check_circle", class: "material-icons") : content_tag(:span, "circle", class: "material-icons") %>
  <% end %>
  <%= turbo_frame_tag "task_#{task.id}", class: "w-full my-5 space-y-5 flex flex-row justify-between items-center pb-5 sm:pb-0" do %>
    <p class="ml-2">
      <%= task.name %>
    </p>
    <%= link_to edit_task_path(task), class: "w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium w-auto flex flex-col sm:flex-row space-x-2 space-y-2" do %>
      <span class="material-icons">edit</span>
    <% end %>
  <% end %>
</div>
