<div>
  <h1 class="text-4xl font-bold text-center mb-8">
    Portfolio Lexdrel
  </h1>

  <% if user_signed_in? %>
    <p class="mb-4">Welcome back, <%= current_user.email %>!</p>
    <%= link_to "Go to Dashboard", user_path, class: "bg-indigo-600 text-white px-4 py-2 rounded" %>
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded mt-2" %>
  <% else %>
    <div class="flex justify-center space-x-4 mb-8">
      <%= link_to "Sign In", new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Sign in with LinkedIn", user_linkedin_omniauth_authorize_path, data: { turbo: false }, class: "bg-[#0077b5] hover:bg-[#005582] text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <p>List of demo strings</p>


  <ul class="list-disc list-inside text-lg">
    <% @demos.each do |demo| %>
      <li class="ml-4">
        <%= demo.title %>
      </li>
    <% end %>
  </ul>
</div>
